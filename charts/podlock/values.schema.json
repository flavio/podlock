      "additionalProperties": false,
      "properties": {
        "image": {
          "additionalProperties": false,
          "properties": {
            "pullPolicy": {
              "default": "IfNotPresent",
              "title": "pullPolicy",
              "type": "string"
            },
            "repository": {
              "default": "flavio/podlock/nri",
              "title": "repository",
              "type": "string"
