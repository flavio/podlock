          "required": [
            "repository",
            "tag",
            "pullPolicy"
          ],
          "title": "image",
          "type": "object"
        },
        "replicas": {
          "default": 1,
          "title": "replicas",
          "type": "integer"
        },
        "resources": {
          "additionalProperties": false,
          "properties": {
            "limits": {
              "additionalProperties": false,
              "properties": {
                "cpu": {
                  "default": "500m",
                  "title": "cpu",
                  "type": "string"
                },
                "memory": {
                  "default": "2Gi",
                  "title": "memory",
                  "type": "string"
                }
              },
              "required": [
                "cpu",
                "memory"
              ],
              "title": "limits",
              "type": "object"
            },
            "requests": {
              "additionalProperties": false,
              "properties": {
                "cpu": {
                  "default": "250m",
                  "title": "cpu",
                  "type": "string"
                },
                "memory": {
