<article class="doc">
  {{#with page.title}}
  <h1 class="page">{{{this}}}</h1>
  {{/with}}

  {{#if (eq page.version 'next')}}
  <div class="admonitionblock warning">
    <table>
      <tbody>
        <tr>
          <td class="icon">
            <i class="fa icon-warning" title="Warning"></i>
          </td>
          <td class="content">
            This is unreleased documentation for PodLock Next ðŸš§ version.
            Features here may not be released yet.
            <br>
            For up-to-date documentation, see the
            <a href="{{{relativize page.component.latest.url}}}">latest stable version</a>
            ({{page.component.latest.displayVersion}}).
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  {{/if}}


  {{{page.contents}}}
  {{> pagination}}
</article>